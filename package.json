{
  "name": "jr-resume",
  "version": "1.0.0",
  "description": "Professional resume for Jonathan Reyes",
  "main": "index.js",
  "private": true,
  "scripts": {
    "compile": "mkdir -p dist && npm run compile:markdown && npm run compile:html",
    "compile:markdown": "./node_modules/.bin/hackmyresume BUILD resume.json TO dist/resume.md",
    "compile:html": "./node_modules/.bin/resume export dist/resume.html --theme elegant",
    "watch": "./node_modules/.bin/fsmonitor -p '+resume.json' npm run compile",
    "test": "./node_modules/.bin/resume test",
    "publish": "npm run publish:website && npm run publish:registry",
    "publish:registry": "./node_modules/.bin/resume publish --theme elegant",
    "publish:website": "scp dist/resume.html root@personal:/var/www/resume.jonathanreyes.com/html/index.html"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jylinman/resume.git"
  },
  "author": "Jonathan Reyes",
  "bugs": {
    "url": "https://github.com/jylinman/resume/issues"
  },
  "keywords": [
    "cv",
    "resume",
    "json",
    "jsonresume"
  ],
  "homepage": "https://jonathanreyes.com",
  "dependencies": {
    "fsmonitor": "^0.2.4",
    "hackmyresume": "^1.2.2",
    "resume-cli": "^0.4.8"
  }
}
